// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tour {
  id          String    @id @default(uuid())
  title       String
  description String?
  price       Float
  currency    String    @default("BYN")
  category    String    @default("hot")
  image_url   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // --- ИЗМЕНЕНИЕ: Тур по умолчанию опубликован ---
  published   Boolean   @default(true)
  
  // --- SEO поля тура ---
  seoTitle       String?
  seoDescription String?
  imageAlt       String?
  // --- КОНЕЦ ИЗМЕНЕНИЙ ---

  createdById String?
  updatedById String?
  createdBy   AdminUser? @relation("CreatedTours", fields: [createdById], references: [id])
  updatedBy   AdminUser? @relation("UpdatedTours", fields: [updatedById], references: [id])

  @@map("tours")
}

model Review {
  id          String     @id @default(uuid())
  author      String
  text        String
  rating      Int
  date        DateTime   @default(now())
  status      String     @default("pending")
  updatedAt   DateTime   @updatedAt

  createdById String?
  createdBy   AdminUser? @relation("CreatedReviews", fields: [createdById], references: [id])

  @@map("reviews")
}

model AdminUser {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         String   @default("admin")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  canManageSeo Boolean  @default(false)

  createdTours   Tour[]     @relation("CreatedTours")
  updatedTours   Tour[]     @relation("UpdatedTours")
  createdReviews Review[]   @relation("CreatedReviews")
  activities     ActivityLog[]

  @@map("admin_users")
}

model ActivityLog {
  id        String   @id @default(uuid())
  action    String   // CREATE, UPDATE, DELETE, PUBLISH, UNPUBLISH, LOGIN
  entity    String   // Tour, Review, User, SeoPage, Redirect, Setting
  entityId  String?  // ID of the object
  details   String?  // Human readable details
  metadata  String?  // JSON string
  createdAt DateTime @default(now())

  userId    String
  user      AdminUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("activity_logs")
}

model SeoPage {
  id             String   @id @default(uuid())
  routeKey       String   @unique
  title          String
  description    String
  h1             String?
  seoText        String? // @text content
  keywords       String?
  robots         String?  @default("index, follow")
  canonicalUrl   String?
  structuredData String? // JSON-LD
  ogTitle        String?
  ogDescription  String?
  ogImage        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("seo_pages")
}

model Redirect {
  id          String   @id @default(uuid())
  fromPath    String   @unique
  toPath      String
  isPermanent Boolean  @default(true) // true = 301, false = 302
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("redirects")
}

model GlobalSetting {
  key       String   @id // keys: scripts_head, scripts_body, ga_id, ym_id
  value     String   // Может быть большим текстом
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("global_settings")
}
